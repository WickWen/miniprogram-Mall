.tabs_title {
  display: flex;
  height: 88rpx;
}
.tabs_title_item {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}
.tabs_title .active {
  font-weight: 700;
  font-size: 30rpx;
  color: #676767;
  position: relative;
}
.tabs_title .active::after {
  content: '';
  position: absolute;
  bottom: 0;
  height: 4rpx;
  width: 185rpx;
  color: #3D3D3D;
  background-color: #EA4350;
}
.goods {
  display: flex;
  padding: 40rpx 26rpx 26rpx 10rpx;
}
.goods_image {
  width: 190rpx;
  height: 190rpx;
}
.goods_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_name {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods_price {
  font-size: 24rpx ;
  color: #EA4350;
}
